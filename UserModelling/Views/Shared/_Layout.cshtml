<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - User Modelling Inc</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:midnightblue">
        <div class="container">
            <div class="navbar-header" style="font-weight:bold;color:whitesmoke">
                <a href="https://um.org" target="_blank"><img src="~/Content/um-logo.png" style="width:50px" /></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("User Modelling Inc", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("Events", "Index", "Events")</li>
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("Organisers", "Index", "Organisers")</li>
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("Members", "Index", "Attendees")</li>
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("Registeration for Attendees", "Index", "Registerations")</li>
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("Registeration for Organisers", "Index", "EventOrganisers")</li>
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("About Us", "About", "Home")</li>
                    <li style="font-weight:bold;color:whitesmoke">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NIT5150 Advanced Object Oriented Programming, Victoria University, Sydney</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
