@model IEnumerable<UserModelling.Models.Registerations>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Registeration", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Attendees.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Events.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterationDateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Attendees.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Events.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterationDateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RegisterationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegisterationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegisterationId })
        </td>
    </tr>
}

</table>
